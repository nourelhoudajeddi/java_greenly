<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.greenly.controllers.AfficherModulesFront">
    <children>
        <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="1130.0">
            <children>
                <AnchorPane>
                    <children>
                        <VBox layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="210.0" spacing="5" style="-fx-background-color: #388E3C; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 2, 2);">
                            <children>
                                <Button fx:id="btnuser" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="👥  Utilisateurs" />
                                <Button fx:id="btnmodule" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="📙  Modules" />
                                <Button fx:id="btnformation" mnemonicParsing="false" onAction="#gotoformations" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="📖  Formations" />
                                <Button fx:id="btnproduit" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="📦  Produits" />
                                <Button fx:id="btncommande" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="🛒  Commandes" />
                                <Button fx:id="btnsponsors" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="🤝  Sponsors" />
                                <Button fx:id="btnevent" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="📅  Evenements" />
                                <Button fx:id="btndon" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="💸  Dons" />
                                <Button fx:id="btnassoc" mnemonicParsing="false" prefHeight="42.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" text="🏢  Associations" />
                            </children>
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="20" />
                            </padding>
                        </VBox>
                        <ScrollPane fitToWidth="true" layoutX="220.0" layoutY="10.0" prefHeight="580.0" prefWidth="890.0" style="-fx-background-color: #F9F9F9; -fx-background-radius: 10;">
                            <content>
                                <FlowPane fx:id="moduleContainer" hgap="20.0" vgap="20.0">
                                    <padding>
                                        <Insets bottom="20" left="20" right="20" top="20" />
                                    </padding>
                                </FlowPane>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
