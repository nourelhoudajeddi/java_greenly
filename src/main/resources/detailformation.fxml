<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="603.0" prefWidth="1133.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.greenly.controllers.DetailFormationController">
    <children>
        <!-- Sidebar -->
        <VBox layoutX="-2.0" prefHeight="613.0" prefWidth="213.0" style="-fx-background-color: #4CAF50;">
            <children>
                <Button fx:id="btnuser" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="👥  Utilisateurs" />
                <Button fx:id="btnmodule" mnemonicParsing="false" onAction="#gotomodules" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="📙  Modules" />
                <Button fx:id="btnformation" mnemonicParsing="false" onAction="#gotoformations" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="📖  Formations" />
                <Button fx:id="btnproduit" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="📦  Produits" />
                <Button fx:id="btncommande" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="🛒  Commandes" />
                <Button fx:id="btnsponsors" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="🤝  Sponsors" />
                <Button fx:id="btnevent" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="📅  Evenements" />
                <Button fx:id="btndon" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="💸  Dons" />
                <Button fx:id="btnassoc" mnemonicParsing="false" prefHeight="42.0" prefWidth="202.0" style="-fx-background-color: #4CAF50;" text="🏢  Associations" />
            </children>
        </VBox>

        <!-- Détails de la formation -->
        <VBox layoutX="230.0" layoutY="30.0" spacing="10.0">
            <children>
                <Label fx:id="nomFormationLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="descriptionFormationLabel" wrapText="true" />
                <Label fx:id="dureeFormationLabel" />
                <Label fx:id="modeFormationLabel" />
                <Label fx:id="dateDebutLabel" />
                <Label fx:id="dateFinLabel" />
            </children>
        </VBox>

        <!-- Carte -->
        <WebView fx:id="mapView" layoutX="674.0" layoutY="60.0" prefHeight="439.0" prefWidth="412.0" />
    </children>
</AnchorPane>
